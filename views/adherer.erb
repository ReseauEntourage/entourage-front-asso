<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Réseau Entourage</title>

    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="bootstrap/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="css/fonts.css" rel="stylesheet">
    <link href="css/main.css" rel="stylesheet">
    <link href="css/join.css" rel="stylesheet">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="page-join">
    <div class="container-fluid">
      <div id="tete"><div class="overlay"></div>
        <div class="row">
          <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
            <div class="clear separator">
              <div class="visible-md visible-lg" style="height:25vh;"></div>
              <div class="visible-xs visible-sm" style="height:15vh;"></div>
            </div>

            <div class="content text-center center-block">
              <h1>ADHÉRER AU RÉSEAU<br>ENTOURAGE</h1>
            </div>

            <div class="clear separator">
              <div class="visible-md visible-lg" style="height:25vh;"></div>
              <div class="visible-xs visible-sm" style="height:15vh;"></div>
            </div>
          </div>
        </div> <!-- /.row -->
      </div> <!-- /#banner -->
    </div> <!-- /.container-fluid -->

    <div class="container-fluid">
      <div id="adherer">
        <form id="registration_form" class="material" method="POST" action="<%= @registration_requests_form_url %>" data-form-data=<%= @s3_direct_post.fields.to_json %> data-url=<%= @s3_direct_post.url %> data-host=<%= URI.parse(@s3_direct_post.url).host %> >
          <input id="registration_form-1-logo_key" name="logo_key" type="hidden" required>

          <div class="row">
            <div class="clear separator">
              <div class="visible-md visible-lg" style="height:60px;"></div>
              <div class="visible-xs visible-sm" style="height:30px;"></div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-5 col-sm-5 col-md-3 col-lg-3">
              <div id="etape-1" class="step-indicator">
                ÉTAPE 1
              </div>
            </div>
          </div>

          <div class="row">
            <div class="clear separator">
              <div class="visible-md visible-lg" style="height:60px;"></div>
              <div class="visible-xs visible-sm" style="height:30px;"></div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
              <h2 class="text-center">ADHÉRER<span>À ENTOURAGE PRO</span></h2>
            </div>
          </div> <!-- /.row -->

          <div class="clear separator">
            <div class="visible-md visible-lg" style="height:40px;"></div>
            <div class="visible-xs visible-sm" style="height:20px;"></div>
          </div>

          <div class="row">
            <div class="col-xs-10 col-sm-8 col-sm-offset-1 col-md-10 col-md-offset-0 col-lg-10 col-lg-offset-0">
              <div class="row">
                <div class="col-xs-5 col-sm-4 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
                  <div class="input-field">
                    <input required class="field" id="registration_form-1-name" name="name" type="text">
                    <label for="registration_form-1-name">Nom de l'association *</label>
                  </div>
                </div>

                <div class="col-xs-5 col-sm-4 col-sm-offset-2 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
                  <div class="input-field">
                    <input class="field" id="registration_form-1-local_entity" name="local_entity" type="text">
                    <label for="registration_form-1-local_entity">Entité local</label>
                  </div>
                </div>

                <div class="col-xs-10 col-sm-10 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
                  <div class="input-field">
                    <input class="field" id="registration_form-1-address" name="address" type="text">
                    <label for="registration_form-1-address">Adresse (locale)</label>
                  </div>
                </div>

                <div class="col-xs-5 col-sm-4 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
                  <div class="input-field">
                    <input required class="field" id="registration_form-1-phone" name="phone" type="tel">
                    <label for="registration_form-1-phone">Numéro de téléphone</label>
                  </div>
                </div>

                <div class="col-xs-5 col-sm-4 col-sm-offset-2 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
                  <div class="input-field">
                    <input class="field" id="registration_form-1-email" name="email" type="email">
                    <label for="registration_form-1-email">E-mail</label>
                  </div>
                </div>

                <div class="col-xs-10 col-sm-10 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
                  <div class="input-field">
                    <input class="field" id="registration_form-1-website_url" name="website_url" type="url">
                    <label for="registration_form-1-website_url">URL du site de l'association</label>
                  </div>
                </div>

                <div class="col-xs-10 col-sm-10 col-md-5 col-md-offset-1 col-lg-5 col-lg-offset-1">
                  <div class="input-field">
                    <div class="field">
                      <textarea class="field" required id="registration_form-1-description" name="description"></textarea>
                    </div>
                    <label for="registration_form-1-description">Description de l'association</label>
                  </div>
                </div>

                <div class="col-xs-10 col-sm-10 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
                  <div class="input-field">
                    <input class="btn btn-block" id="registration_form-logo" type="file" accept="image/png, image/jpeg">CHARGER VOTRE LOGO</input>
                  </div>
                </div>

              </div> <!-- /.row -->
            </div>
          </div> <!-- /.row -->

          <div class="row">
            <div class="clear separator">
              <div class="visible-md visible-lg" style="height:60px;"></div>
              <div class="visible-xs visible-sm" style="height:30px;"></div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-5 col-sm-5 col-md-3 col-lg-3">
              <div id="etape-2" class="step-indicator">
                ÉTAPE 2
              </div>
            </div>
          </div>

          <div class="row">
            <div class="clear separator">
              <div class="visible-md visible-lg" style="height:60px;"></div>
              <div class="visible-xs visible-sm" style="height:30px;"></div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-10 col-xs-offset-0 col-sm-10 col-sm-offset-0 col-md-4 col-md-offset-3 col-lg-4 col-lg-offset-3">
              <h2 class="text-center">CONTACT</h2>
              <p class="text-center small">de la personne qui sera responsable "administrateur" du compte entourage ( nous lui créerons un compte administrateur )</p>
            </div>
          </div> <!-- /.row -->

          <div class="clear separator">
            <div class="visible-md visible-lg" style="height:40px;"></div>
            <div class="visible-xs visible-sm" style="height:20px;"></div>
          </div>

          <div class="row">
            <div class="col-xs-5 col-sm-4 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
              <div class="input-field">
                <input required class="field" id="registration_form-2-first_name" name="first_name" type="text">
                <label for="registration_form-2-first_name">Prénom *</label>
              </div>
            </div>

            <div class="col-xs-5 col-sm-4 col-sm-offset-2 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
              <div class="input-field">
                <input required class="field" id="registration_form-2-last_name" name="last_name" type="text">
                <label for="registration_form-2-last_name">Nom *</label>
              </div>
            </div>

            <div class="col-xs-5 col-sm-4 col-sm-offset-2 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
              <div class="input-field">
                <input required class="field" id="registration_form-2-phone" name="phone" type="text">
                <label for="registration_form-2-phone">Téléphone mobile *</label>
              </div>
            </div>

            <div class="col-xs-10 col-sm-10 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
              <div class="input-field">
                <input required class="field" id="registration_form-2-email" name="email" type="email">
                <label for="registration_form-2-email">Email *</label>
              </div>
            </div>

            <div class="col-xs-10 col-sm-10 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
              <div class="checkbox-field">
                <input required id="registration_form-2-agreement" name="agreement" type="checkbox" autocomplete="off">
                <label for="registration_form-2-agreement">J'ai lu, j'accepte et j'engage mon association à respecter la charte de solidarité Entourage</label>
              </div>
            </div>

            <div class="col-xs-10 col-sm-10 col-md-2 col-md-offset-1 col-lg-2 col-lg-offset-1">
              <div class="input-field">
                <a href="#" class="btn btn-block btn-default" id="registration_form-download" target="_blank">TÉLÉCHARGER LA CHARTE</a>
              </div>
            </div>
          </div> <!-- /.row -->

          <div class="row">
            <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
              <button id="registration_form-submit" type="submit" class="btn btn-submit btn-primary center-block">ENVOYER</button>
            </div>
          </div> <!-- /.row -->
        </form>
      </div> <!-- /#adherer -->

      <div id="sponsors">
        <div class="row">
          <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
          </div>
        </div> <!-- /.row -->
      </div> <!-- /#sponsors -->

    </div> <!-- /.container-fluid -->

    <div class="clear separator">
      <div class="visible-md visible-lg" style="height:40px;"></div>
      <div class="visible-xs visible-sm" style="height:20px;"></div>
    </div>

    <div class="container-fluid">
      <div id="bas_de_page">
        <div class="row">
          <div class="col-xs-10 col-sm-5 col-md-5 col-md-offset-1 col-lg-4 col-lg-offset-1">
            <div id="bas_de_page-infos">
              <ul>
                <li>Rue des feuillantines, Paris, France</li>
                <li>06 59 87 45 26</li>
                <li>entourage@gmail.com</li>
              </ul>
            </div> <!-- /#bas_de_page-infos -->
          </div>

          <div class="col-xs-10 col-sm-5 col-md-5 col-md-offset-1 col-lg-4 col-lg-offset-0">
            <div id="bas_de_page-links" class="text-right">
              <ul>
                <li>Mentions légales</li>
                <li>Crédits</li>
              </ul>
            </div> <!-- /#bas_de_page-infos -->
          </div>
        </div> <!-- /.row -->
      </div> <!-- /#bas-de-page -->

    </div> <!-- /.container-fluid -->

    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <script src="js/same_height_as.js"></script>
    <script src="js/script.js"></script>
    <script src="js/jquery.ui.widget.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/blueimp-file-upload/9.5.7/jquery.fileupload.min.js"></script>
    <script src="js/file_upload.js"></script>
  </body>
</html>
